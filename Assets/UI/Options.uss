#panel {
}

.zisle-control-binding {
	flex-direction: row;
	color: var(--zisle-panel-row-content-color);
	margin: 0px;
}

.zisle-control-binding__binding {
	background-color: var(--zisle-panel-row-content-background-color);
	border-width: var(--zisle-panel-row-content-border-width);
	border-radius: var(--zisle-panel-row-content-border-radius);
	border-color: var(--zisle-panel-row-content-border-color);
	width: 250px;
	margin-left: 16px;
	margin-top: 6px;
	margin-bottom: 6px;
	font-size: var(--font-size-small);
}

.zisle-control-binding__wait {
	color: var(--zisle-panel-row-highlight-color);
	font-size: 80%;
	-unity-text-align: middle-center;
}

.zisle-control-binding__bindings
{
	flex-direction: row;
	margin-left: auto;
}

.zisle-control-binding__button
{
	margin: 0;
	padding: 2px;
	color: var(--color-text-dark);
}

.zisle-panel__items {
	padding-left: 0px !important;
	padding-right: 0px !important;
}

.tabs {
	flex-direction: row;
	margin-left: 20px;
	margin-right: 10px;
	margin-bottom: 10px;
	margin-top: 20px;
}

.tabs .zisle-button {
	margin-right: 10px;
}

.tab-content {
	height: 500px;
	width: 1000px;
	margin-bottom: auto;
}


/* Keyboard bindings */

.zisle-control-binding__binding__lmb {
	background-image: url("project://database/Assets/Sprites/Icons/IconMouseLeft.png");
	-unity-background-image-tint-color: var(--color-text);
	width: 40px;
	height: 40px;
	margin: auto;
	margin-top: 2px;
	padding: 0;
	color: rgba(0,0,0,0);
}

